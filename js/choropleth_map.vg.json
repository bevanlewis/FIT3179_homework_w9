{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 300,
  "projection": { "type": "equalEarth" },
  "title": "Energy Consumption per capita (kWh/person) 2021",
  "data": {
    "url": "ne_110m_admin_0_countries.topojson",
    "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": { "type": "topojson", "feature": "oceans" }
      },
      "mark": { "type": "geoshape", "fill": "skyblue" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/bevanlewis/FIT3179_homework_w9/main/js/ne_110m_graticules_30.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "white" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/bevanlewis/FIT3179_homework_w9/main/js/ne_110m_admin_0_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
      "encoding": {
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" }
        ]
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.ADM0_A3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/bevanlewis/FIT3179_homework_w9/main/data/per-capita-energy-use-clean.csv"
            },
            "key": "Code",
            "fields": ["Energy"]
          }
        },
        { "calculate": "datum.Energy + 0.1", "as": "Energy consumption" }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "Energy",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "domain": [1000, 2000, 5000, 10000, 50000, 100000, 200000, 500000],
            "range": [
              "#fdd593",
              "#FDBB84",
              "#FD8d58",
              "#EE6547",
              "#D6311F",
              "#B20000",
              "#7F0001",
              "#000000"
            ],
            "scheme": "reds"
          },
          "title": "kWh/person"
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          { "field": "Energy", "type": "quantitative" }
        ]
      }
    }
  ],
  "config": {}
}
